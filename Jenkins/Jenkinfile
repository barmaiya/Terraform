pipeline {
    agent none 
    stages {
        stage('git chekout') {
            steps {
                // below command pull file from github and insert in  /var/lib/jenkins/workspace
               git branch: 'main', credentialsId: 'github', url: 'https://github.com/barmaiya/devops2.git'
            }
        }
        
        
        stage('terraform connect') {
            steps {
               sshagent(['terraformserver']) {
                    sshPublisher(publishers: [sshPublisherDesc(configName: 'terraformserver', transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '.', remoteDirectorySDF: false, sourceFiles: '*.tf')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])
                     
                }
            }
        }
        
        stage('terraform apply') {
            steps {
                sshagent(['terraformserver']) {
                        sh 'ssh -o StrictHostKeyChecking=no  ec2-user@172.31.40.57  terraform init'
                        sh 'ssh -o StrictHostKeyChecking=no  ec2-user@172.31.40.57  terraform apply -auto-approve'
                    }              
                       
            }
        }

        // stage('--------------ansible playbook to install nginx') {
        //     steps {
        //         echo 'ansible playbook install nginx'
        //         sh 'ansible-playbook nginx.yaml'
        //     }
        // }

        // stage('ansible playbook to install application') {
        //     steps {
        //         echo 'ansible playbook install application/artifact'
        //         sh 'ansible-playbook app_deploy.yml'
        //     }
        // }

        

    }
}